<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="@dimen/value_30"
        android:layout_height="@dimen/value_30"
        android:src="@drawable/superlike" />


    <com.ictech.cupidlove.customview.textview.TextViewMedium
        android:id="@+id/tvTitle"
        style="@style/txt_white_medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/value_5"
        android:layout_marginLeft="@dimen/value_15"
        android:layout_marginRight="@dimen/value_15"
        android:layout_marginTop="@dimen/value_15"
        android:singleLine="true"
        android:lines="1"
        android:gravity="center"
        android:text="Unlimited Chat ANd SUper Likes" />

    <com.ictech.cupidlove.customview.textview.TextViewMedium
        android:id="@+id/tvDescription"
        style="@style/txt_white_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/value_15"
        android:layout_marginRight="@dimen/value_15"
        android:alpha="0.9"
        android:singleLine="true"
        android:lines="1"
        android:gravity="center"
        android:text="Unlimited Chat ANd SUper Likes" />
</LinearLayout>